{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar Projeto (Portátil)",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
              
              // Caminhos - Raylib
                "-I", "${workspaceFolder}/vendor/include",
                "-L", "${workspaceFolder}/vendor/lib",
                
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilação portátil via GitHub."
        }
    ]
}
