{
    "version": "2.0.0",
    "tasks": [
        {
            // --- TAREFA 1: PARA WINDOWS (LOCAL) ---
            "type": "cppbuild",
            "label": "Compilar no Windows (Local)",
            "command": "gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
                "-I", "${workspaceFolder}/vendor/include",
                "-L", "${workspaceFolder}/vendor/lib",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "detail": "Usa a pasta vendor (Windows)."
        },
        {
            // --- TAREFA 2: PARA CODESPACES (LINUX) ---
            "type": "shell",
            "label": "Compilar no Codespace (Linux)",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/output/${fileBasenameNoExtension}", // Sem .exe no Linux
                "-lraylib", // Usa a biblioteca instalada no sistema
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11",
                "-Wall"
            ],
            "group": "build",
            "detail": "Usa a Raylib do sistema Linux."
        }
    ]
}
